@using WebApplication4.Models;
@{
    ViewBag.Title = "Poin";
    List<Poin> DataPoin = (List<Poin>)ViewData["DataPoin"];

}

<h2>Poin</h2>

<div class="row" style="padding-right: 10px; padding-top: 5px;">

    <table class="table table-stripped table-condensed table-bordered">
        <thead>
            <tr>
                <th style="font-weight: bold;">NO</th>
                <th style="font-weight: bold;">AccountId</th>
                <th style="font-weight: bold;">Name</th>
                <th style="font-weight: bold;">Total Point</th>
            </tr>
        </thead>
        <tbody>
            @if (DataPoin != null && DataPoin.Count != 0)
            {
                foreach (Poin a in DataPoin)
                {
                    <tr>
                        <td class="text-center" style="font-size:11px">@a.NO</td>
                        <td class="text-center" style="font-size:11px">@a.AccountId</td>
                        <td class="text-center" style="font-size:11px">@a.Name</td>
                        <td class="text-center" style="font-size:11px">@a.TotalPoin</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="13"> No Data Found</td>
                </tr>
            }

        </tbody>
    </table>
</div>